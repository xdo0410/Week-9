Week-9
======
public class Dice 
{
	int number;
	
	public Dice()
	{
		roll();
	}
	
	public void roll()
	{
		number = (int)(Math.random()*6+1);
	}
	
	public int value()
	{
		return number;
	}
}



public class mainDice 
{
	public static void main(String[] arg)
	{
		Dice dice;
		dice = new Dice();
		
		dice.roll();
		
	}
}
